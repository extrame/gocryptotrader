env#GOPATH.run.append {
    $currentDir
}
env#GOOS.deploy {
    linux
}
compile(.run) {
    go install github.com/extrame/gocryptotrader
    go install github.com/extrame/gocryptotrader/tools/grpc_client
}
run(compile) {
    gocryptotrader -config config_example.json
}
client(compile) {
    /Users/liuming/go/bin/grpc_client --config ./config_example.json
}
deploy(compile .deploy){
    rsync -avz /Users/liuming/go/bin/linux_amd64 root@47.91.196.173:gocryptotrader
}
remote {
    ssh root@47.91.196.173
}
grpc {
    protoc ./currency/pair/pair.proto --go_out=plugins=grpc:.
    protoc -I. -I=/Users/liuming/go/src ./exchanges/ticker/price.proto --go_out=Mgoogle/protobuf/empty.proto=github.com/golang/protobuf/ptypes/empty,plugins=grpc:/Users/liuming/go/src
    protoc -I. -I=/Users/liuming/go/src ./grpc/cryptotrader.proto --go_out=Mgoogle/protobuf/empty.proto=github.com/golang/protobuf/ptypes/empty,plugins=grpc:.
}
